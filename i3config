# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# modes

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+d
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+d mode "default"
        bindsym $l2+j mode "default"
}

# mode for quickly launching apps
mode "launcher" {
        bindsym t exec "mate-terminal & > /dec/null"
        bindsym f exec "ff & > /dev/null"
        bindsym b exec "brave-browser & > /dev/null"
        bindsym c exec "code"
        
        # back to normal
        bindsym Escape mode "default"
        bindsym Return mode "default"
        bindsym $mod+d mode "default"
        
        # experimental
        bindsym $l2+k mode "default"
}



# systemctl
mode "system" {
        bindsym l exec --no-startup-id $lock, mode "default"
        bindsym e exec --no-startup-id "i3-msg exit"j, mode "default"
        bindsym s exec --no-startup-id "i3lock && systemctl suspend", mode "default"
        bindsym h exec --no-startup-id "i3lock && systemctl hibernate", mode "default"
        bindsym r exec --no-startup-id "i3lock && systemctl reboot", mode "default"
        bindsym Shift+s exec --no-startup-id "i3lock && systemctl poweroff", mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+y mode "default"
}

# screen config
mode "monitors" {
        bindsym h+1+l exec xrandr --output HDMI-A-0 --primary --auto --left-of eDP
        bindsym h+1+r exec xrandr --output HDMI-A-0 --primary --auto --right-of eDP
        bindsym h+1+a exec xrandr --output HDMI-A-0 --primary --auto --above  eDP
        bindsym h+1+b exec xrandr --output HDMI-A-0 --primary --auto --below eDP

        bindsym h+2+l exec xrandr --output HDMI-A-1 --primary --auto --left-of eDP
        bindsym h+2+r exec xrandr --output HDMI-A-1 --primary --auto --right-of eDP
        bindsym h+2+a exec xrandr --output HDMI-A-1 --primary --auto --above  eDP
        bindsym h+2+b exec xrandr --output HDMI-A-1 --primary --auto --below eDP

        bindsym d+1+l exec xrandr --output DisplayPort-0 --primary --auto --left-of eDP
        bindsym d+1+r exec xrandr --output DisplayPort-0 --primary --auto --right-of eDP
        bindsym d+1+a exec xrandr --output DisplayPort-0 --primary --auto --above  eDP
        bindsym d+1+b exec xrandr --output DisplayPort-0 --primary --auto --below eDP

        bindsym d+2+l exec xrandr --output DisplayPort-1 --primary --auto --left-of eDP
        bindsym d+2+r exec xrandr --output DisplayPort-1 --primary --auto --right-of eDP
        bindsym d+2+a exec xrandr --output DisplayPort-1 --primary --auto --above  eDP
        bindsym d+2+b exec xrandr --output DisplayPort-1 --primary --auto --below eDP

        bindsym d+3+l exec xrandr --output DisplayPort-2 --primary --auto --left-of eDP
        bindsym d+3+r exec xrandr --output DisplayPort-2 --primary --auto --right-of eDP
        bindsym d+3+a exec xrandr --output DisplayPort-2 --primary --auto --above  eDP
        bindsym d+3+b exec xrandr --output DisplayPort-2 --primary --auto --below eDP

        bindsym d+4+l exec xrandr --output DisplayPort-3 --primary --auto --left-of eDP
        bindsym d+4+r exec xrandr --output DisplayPort-3 --primary --auto --right-of eDP
        bindsym d+4+a exec xrandr --output DisplayPort-3 --primary --auto --above  eDP
        bindsym d+4+b exec xrandr --output DisplayPort-3 --primary --auto --below eDP

        bindsym d+5+l exec xrandr --output DisplayPort-4 --primary --auto --left-of eDP
        bindsym d+5+r exec xrandr --output DisplayPort-4 --primary --auto --right-of eDP
        bindsym d+5+a exec xrandr --output DisplayPort-4 --primary --auto --above  eDP
        bindsym d+5+b exec xrandr --output DisplayPort-4 --primary --auto --below eDP

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+m mode "default"
}

bindsym $mod+y mode "system"
bindsym $mod+m mode "monitors"
bindsym $mod+b mode "resize"

