# basic aliases
alias updatezsh='source ~/.zshrc'
alias t='alacritty &'
alias c='clear'
alias ll='ls -CF'
alias la='ls -la'
alias l='ls'
alias reboot='sudo /sbin/reboot'
alias shutdown='sudo /sbin/shutdown'
alias halt='sudo /sbin/halt'
alias ..='cd ..'
alias ...='cd ../../'
alias h='history'
alias j='jobs -l'
alias rm='rm -I --preserve-root'
alias mv='mv -i'
alias cp='cp -ir'
alias ln='ln -i'
alias chown='chown --preserve-root'
alias chmod='chmod --preserve-root'
alias chgrp='chgrp --preserve-root'
alias e='exit'
alias q='exit'
alias ls='ls -lh --color=auto'
alias dir='ls --color=auto'
alias vdir='vdir --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# applications
alias vi='vim'
alias svi='sudo vim'
alias svim='sudo vim'
alias ping='fping -c 10'
alias vid='mpv'
alias pic='imv-wayland'
alias pcal='python3'
alias cal='mate-calculator &'
alias ping4='fping -4'
alias ping6='fping -6'
alias py='python3'
alias ff='firefox 1> /dev/null  2> /dev/null &'
alias venv='python3 -m venv ./$1'
alias snxd='snx -d'
alias vpn='protonvpn-cli'
alias bat='batcat'
alias imv='imv-wayland'
alias vo='vim $(fzf)'
alias e='vo'
#alias code='code-oss'

# helpful
alias ipa='ip a'
alias ehlo='echo ehlo'
alias wificon='nmcli --ask dev wifi connect '
alias con='nmcli'
alias mute='amixer set Capture nocap'
alias unmute='amixer set Capture cap'
alias soundoff='amixer set Master off'
alias soundon='amixer set Master on'
alias readmail='vim /var/mail/main'
alias doascheck='doas -C /etc/doas.conf && echo "config ok" || echo "config error"'
#alias sudo='doas'
alias cd='z'
